{% block show %}
<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">
        <i class="bi bi-house-door"></i> Personnelles Existants
    </h2>

    <div class="list-group">
        {% for personnelle in personnelles %}
            <div class="list-group-item d-flex justify-content-between align-items-center shadow-sm p-3 mb-3 rounded">
                <div>
                    <p class="mb-0"><strong>Nom :</strong> {{ personnelle.nom }}</p>
                    <p class="mb-0"><strong>Prenom :</strong> {{ personnelle.prenom }}</p>
                    <p class="mb-0"><strong> Genre :</strong> {{ personnelle.genre }}</p>
                    <p class="mb-0"><strong>Role :</strong> {{ personnelle.role }}</p>
                    <p class="mb-0"><strong>Salaire :</strong> {{ personnelle.salaire }}</p>
                    <p class="mb-0"><strong>Service affecter :</strong> {{ personnelle.service.type }}</p>
                   
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-edit">
                        <a href="{{ path('app_personnelle_edit', {'id': personnelle.id}) }}" style="color: #FB6340;">
                            <i class="fas fa-edit"></i> Éditer
                        </a>
                    </button>

                    <form action="{{ path('app_personnelle_delete', {'id': personnelle.id}) }}" method="POST" style="margin: 0;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personnelle.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        {% else %}
            <p class="text-muted">Aucun personnelle disponible.</p>
        {% endfor %}
    </div>

    {% if foyer is defined and chambres is defined %}
        <h2 class="text-center text-primary mt-5 mb-4">Détails pour le personnelle : {{ personnelle.nom }}</h2>
        <h3 class="text-center mb-4">Chambres :</h3>
        <div class="list-group">
            {% for personnelle in personnelles %}
                <div class="list-group-item d-flex justify-content-between align-items-center shadow-sm p-3 mb-3 rounded">
                    <p class="mb-0"><strong>Nom :</strong> {{ personnelle.nom }}</p>
                    <p class="mb-0"><strong>Prenom :</strong> {{ personnelle.prenom }}</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
