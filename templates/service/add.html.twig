<head>
    <link rel="stylesheet" href="{{ asset('css/editService.css') }}">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; 
            margin: 0; 
            background-color: #f5f5f5; 
        }

        .modal-content {
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }

        .modal-header {
            border-bottom: none;
        }

        .modal-title {
            font-size: 1.8rem;
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
            height: 45px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 8px;
            font-weight: 600;
            padding: 12px;
            margin-right: 10px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #f44336;
            border-color: #f44336;
            border-radius: 8px;
            font-weight: 600;
            padding: 12px;
            margin-left: 10px;
            text-decoration: none;
            text-align: center;
        }

        .btn-danger:hover {
            background-color: #e53935;
        }

        .form-label {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .mb-3 {
            margin-bottom: 10px;
        }

        .modal-dialog {
            max-width: 900px;
        }

        .modal-body {
            padding: 20px;
        }

        .row {
            margin-bottom: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .col-md-6 {
            flex: 1 1 45%;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .col-md-6 .form-control {
            width: 100%;
        }

        .btn-close {
            background: none;
            border: none;
        }

        .btn-close:focus {
            outline: none;
            box-shadow: none;
        }

        .w-100 {
            margin-top: 1.5rem;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>

<div class="card">
    <div class="modal fade show" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true" style="display: block;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addModalLabel">ajouter un Service</h5>
                    <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    {{ form_start(form) }}
                    <div class="row">
                    <div class="col-md-6 mb-3">
                            {{ form_label(form.nom, 'Service Type', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter service type'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.type, 'Service Type', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Enter service type'}}) }}
                            {{ form_errors(form.type) }}
                        </div>

                        <div class="col-md-6 mb-3">
                            {{ form_label(form.disponibilite, 'Availability', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.disponibilite, {'attr': {'class': 'form-control', 'placeholder': 'Enter availability status'}}) }}
                            {{ form_errors(form.disponibilite) }}
                        </div>
                    </div>

                 
                    <div class="d-flex">
               
                        <a href="{{ path('app_service_index') }}" class="btn btn-danger w-100">Cancel</a>

                      
                        <button type="submit" class="btn btn-primary w-100">Add Service</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
